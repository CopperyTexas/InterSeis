{
  "name": "InterSeis",
  "version": "0.0.1",
  "author": "Denis Glebov",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "electron": "electron main.js",
    "electron:serve": "concurrently \"cross-env NODE_ENV=development ng serve\" \"wait-on http://localhost:4200 && cross-env NODE_ENV=development npm run electron\"",
    "electron:build": "ng build --configuration production && electron-builder"
  },
  "build": {
    "appId": "Mining Institute",
    "productName": "InterSeis",
    "directories": {
      "buildResources": "resources",
      "output": "dist_electron"
    },
    "files": [
      "dist/InterSeis/browser/**/*",
      "main.js",
      "preload.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "resources/InterSeis.ico",
      "executableName": "InterSeis"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/InterSeis.ico"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.3",
    "@angular/cdk": "^19.2.1",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/material": "^19.0.2",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@tailwindcss/vite": "^4.0.7",
    "chardet": "^2.1.0",
    "iconv-lite": "^0.6.3",
    "normalize.css": "^8.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.2",
    "@angular/cli": "^19.0.2",
    "@angular/compiler-cli": "^19.0.0",
    "@eslint/js": "^9.16.0",
    "@types/estree": "^1.0.6",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "19.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^25.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "husky": "^8.0.3",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8.5.2",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "typescript-eslint": "8.16.0",
    "wait-on": "^8.0.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
}
